# AI Interview Analysis Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ===============================
# REQUIRED API KEYS
# ===============================

# OpenAI API Key - Required for AI analysis
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# Google Gemini API Key - Optional alternative to OpenAI
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# ===============================
# VOICE AGENT CONFIGURATION (Optional)
# ===============================

# LiveKit Configuration - Required for voice agent features
# Get from: https://cloud.livekit.io/
LIVEKIT_URL=wss://your-livekit-url
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Groq API Key - For speech-to-text processing
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key

# Cartesia API Key - For text-to-speech synthesis
# Get from: https://cartesia.ai/
CARTESIA_API_KEY=your_cartesia_api_key

# Deepgram API Key - Alternative STT provider
# Get from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key

# ===============================
# APPLICATION CONFIGURATION
# ===============================

# Next.js Frontend API URL (if using with frontend)
NEXTJS_API_URL=http://localhost:3000

# Interview Configuration (optional defaults)
INTERVIEW_ROLE=Software Engineer
INTERVIEW_SKILL_LEVEL=mid
INTERVIEW_RECORD_ID=

# Development and Feature Flags
USE_LEGACY_AGENT=false

# ===============================
# DATABASE CONFIGURATION (Optional)
# ===============================

# Database URL for persistent storage (SQLite by default)
DATABASE_URL=sqlite:///./interview_analysis.db

# For PostgreSQL (uncomment and configure if needed)
# DATABASE_URL=postgresql://username:password@localhost:5432/interview_db

# For MySQL (uncomment and configure if needed)
# DATABASE_URL=mysql://username:password@localhost:3306/interview_db

# ===============================
# LOGGING CONFIGURATION
# ===============================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/interview_agent.log

# ===============================
# FILE UPLOAD CONFIGURATION
# ===============================

# Maximum file size for uploads (in MB)
MAX_UPLOAD_SIZE=100

# Allowed file extensions for audio files
ALLOWED_AUDIO_EXTENSIONS=mp3,wav,m4a,ogg,webm

# Upload directory
UPLOAD_DIRECTORY=uploads

# ===============================
# API RATE LIMITING (Optional)
# ===============================

# Rate limiting settings
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===============================
# SECURITY CONFIGURATION
# ===============================

# Secret key for JWT tokens (generate a random string)
SECRET_KEY=your_super_secret_key_here_change_this

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===============================
# MONITORING & ANALYTICS (Optional)
# ===============================

# Sentry DSN for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Application environment
ENVIRONMENT=development

# ===============================
# EXTERNAL SERVICES (Optional)
# ===============================

# Email service configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Cloud storage (AWS S3, Google Cloud Storage, etc.)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_BUCKET_NAME=your_bucket_name
# AWS_REGION=us-east-1 